{
  "entities": {
    "Family": {
      "title": "Family",
      "description": "Represents a family unit with a shared shopping list.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the family, autogenerated."
        },
        "name": {
          "type": "string",
          "description": "The display name of the family list."
        },
        "shoppingList": {
          "type": "array",
          "description": "The shared shopping list for the family.",
          "items": {
            "$ref": "#/entities/Product"
          }
        },
        "favorites": {
          "type": "array",
          "description": "The list of favorite products for the family.",
          "items": {
            "$ref": "#/entities/Product"
          }
        },
        "members": {
          "type": "number",
          "description": "The number of members in the family."
        }
      },
      "required": ["id", "name", "shoppingList", "members", "favorites"]
    },
    "Product": {
      "title": "Product",
      "description": "An item in the shopping list.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "image": {
          "type": "string"
        },
        "bought": {
          "type": "boolean"
        }
      },
      "required": ["id", "name", "image", "bought"]
    }
  },
  "auth": {
    "providers": []
  },
  "firestore": {
    "/families/{familyId}": {
      "schema": {
        "$ref": "#/entities/Family"
      },
      "description": "Stores family shopping lists."
    }
  }
}
